    <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Navire :" style="@style/operLabel"/>
        <TextView android:id="@+id/navire" style="@style/operValue"/>
